<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.blovvme.handlingfragment.MainActivity">

    <TextView
        android:text="This fragment is addes statically"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <fragment
        android:id="@+id/redFragment"
        android:name="com.blovvme.handlingfragment.RedFragment"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:text="and them dynamically"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddFragment"
        android:onClick="addFragment"
        android:text="Add red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddYellow"
        android:onClick="addFragment"
        android:text="Add yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddBlue"
        android:onClick="addFragment"
        android:text="Add Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    /////////////
    <Button
        android:id="@+id/btnremoveBlue"
        android:onClick="removeFragment"
        android:text="Remove Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnremoveYellow"
        android:onClick="removeFragment"
        android:text="remove Yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnremoveRed"
        android:onClick="removeFragment"
        android:text="Remove Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/removeAll"
        android:onClick="addFragment"
        android:text="All Frags Gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/flFrag1"
        android:layout_width="match_parent"
        android:layout_height="75dp">
    </FrameLayout>

    <TextView
        android:id="@+id/tvFromBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
